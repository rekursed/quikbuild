{% extends 'ZeteqMarketBundle:Market:layout.html.twig' %}
{% block title %}Customer Registration{% endblock %}

{% block middle_container %}

<br>
<div class="container prodshowback">
    <div class="">
        <div class="page-header" ><h1>Create an Account </h1>
            <h4>Having an account allows you to checkout faster, view purchase records, and enjoy many other benefits.</h4>
        </div>
    </div>
    <div class="col-md-5 offset3">
        <form role="form" id="register-form" class="form-horizontal" action="{{ path('myaccount_registersave') }}" method="post" {{ form_enctype(form) }}>

                   {{ form_errors(form) }}

            <div class="form-group">
                <label class="control-label" for="Zeteq_userbundle_registerusertype_email">Your Email</label>
                <div class="controls">
                          {{ form_errors(form.email) }}
                          {{ form_widget(form.email, { 'attr': {'class': 'form-control'} } ) }}    
                </div>
            </div>                 



            <div class="form-group">
                <label class="control-label" for="Zeteq_userbundle_registerusertype_password">Choose Password</label>
                <div class="controls">
                          {{ form_errors(form.password) }}
                          {{ form_widget(form.password, { 'attr': {'class': 'form-control'} } ) }}    
                </div>
            </div> 




    {{ form_rest(form) }}   



            <div class="form-group">

                <button type="submit" class="btn btn-primary btn">Register</button>
            </div>

        </form>
    </div>

</div>




{% endblock %}







