<form method="post" action="{{path('storeproductcategory_batch_delete')}}"> 
    <div class="btn-group">

        <button class="btn btn-danger btn-sm" type="submit" onclick="return confirm('Are you sure?')"><i class="fa fa-trash-o"></i> Delete selected</button>

    </div>
    <hr/>
    <table class="table table-bordered table-hover table-responsive table-striped records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th></th>
                <th>Name</th>
                <th style="text-align:center">Enabled</th>

                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr id='tr{{loop.index}}'>
                <td><a href="{{ path('storeproductcategory_edit', { 'id': entity.id,'store_id':store_id }) }}">{{ entity.id }}</a></td>
                <td><input type="checkbox" name="prod[]" value="{{entity.getId()}}" class="chk"></td>
                <td>{{ entity.name }}</td>
                <td  style="text-align:center" >{% if(entity.enabled) %}<i class="fa fa-check"></i>{%else%}<i class="fa fa-minus-circle"></i>{% endif %}</td>

                <td  style="text-align:right">
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm " href="{{ path('storeproductcategory_show', { 'slug': entity.slug,'store_id':store_id  }) }}"><i class="fa fa-square"></i> show</a>

                        <a class="btn btn-default btn-sm " href="{{ path('storeproductcategory_edit', { 'id': entity.id,'store_id':store_id  }) }}"><i class="fa fa-pencil"></i> edit</a>
                    </div>
                    <a id='{{loop.index}}' onclick="return confirm('Do you really want to delete it?');" class="btn btn-sm btn-danger ajax_link_cart_del"  href="{{ path('storeproductcategory_delete',{'id':entity.getId()}) }}">
                        <span class="glyphicon glyphicon-remove"></span> Delete        </a>       
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</form>

    {% endblock %}
