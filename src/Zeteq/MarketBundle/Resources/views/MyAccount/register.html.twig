{% extends 'ZeteqMarketBundle:Market:myaccount_layout.html.twig' %}

{% block title %}Customer Registration{% endblock %}
 
{% block middle_container %}

 
          
          <div class="">
              <div class="page-header" ><h1>Create an account </h1>
                  <h4>Having a myaccount allows you to checkout faster, view purchase records and many other benefits.</h4>
              </div>
                        </div>
          <div class="col-md-5 offset3">
           <form role="form" id="register-form" class="form-horizontal" action="{{ path('myaccount_registersave') }}" method="post" {{ form_enctype(form) }}>
 
    
 
 
 


 
            

                   {{ form_errors(form) }}
   
     
     
                              
                  <div class="form-group">
<label class="control-label" for="Zeteq_userbundle_registerusertype_email">Your email</label>
<div class="controls">
                          {{ form_errors(form.email) }}
                          {{ form_widget(form.email, { 'attr': {'class': 'form-control'} } ) }}    
</div>
</div>                 
   

          
       <div class="form-group">
<label class="control-label" for="Zeteq_userbundle_registerusertype_password">Pick a password</label>
<div class="controls">
                          {{ form_errors(form.password) }}
                          {{ form_widget(form.password, { 'attr': {'class': 'form-control'} } ) }}    
</div>
</div> 
     
 
     
     
    {{ form_rest(form) }}   
                       
 
 
<div class="form-group">
    
<button type="submit" class="btn btn-primary btn">Register</button>
</div>
                        
                        </form></div>
      
      
 
    
    

{% endblock %}







