{% block content -%}

<br>
<div class="container prodshowback">
    <h1>My Purchases</h1>

    <table class="table table-striped">
       
        <tbody>
            {%for p in purchases%}
            <tr>
                <td>#{{loop.index}}</td>
                <td>{{p.created|date('D d M Y')}}</td>
                <td>{{p.getIsShipped()}}</td>
                <td><a href="{{path('order_details',{'sale':p.id})}}">View</a></td>
            </tr>
            {%endfor%}
           
        </tbody>
    </table>

