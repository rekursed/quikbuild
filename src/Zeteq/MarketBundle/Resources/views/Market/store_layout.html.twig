  {% block body %}
    <header id="top_nav" role="banner" class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button data-target=".bs-navbar-collapse" data-toggle="collapse" type="button" class="navbar-toggle">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>


                <a class="navbar-link" id="logo" href="{{path('home')}}"> <span class="glyphicon glyphicon-leaf"></span> Marketplace</a>

            </div>
            <nav role="navigation" class="collapse navbar-collapse bs-navbar-collapse">


                <ul id="tn_right_menu" class="nav navbar-nav pull-right">

                    <li><a href="{{path('cart_index')}}"><span class="glyphicon glyphicon-shopping-cart"></span>Cart({{service.getCart(store.getSlug()).getCount()}})</a></li>

{% if is_granted('ROLE_CUSTOMER') %}    <li><a href="{{path('myaccount')}}">My Account</a></li>{% endif %}

      {% if is_granted('ROLE_STORE') %}    <li><a href="{{path('store_admin')}}">Store Admin</a></li>{% endif %}
        {% if is_granted('ROLE_ADMIN') %}   <li><a href="{{path('admin')}}">Main Admin</a></li>{% endif %}


           {% if app.user %}
                    <li><a href="{{path('logout')}}">logout</a></li>
 {% else %}
                    <li><a href="{{path('myaccount_register')}}">Customer Registration</a></li>
                    <li><a href="{{path('register')}}">Sellers Register</a></li>
                    <li><a href="{{path('login')}}">Login</a></li>
 {% endif %}

                </ul>


            </nav>
        </div>
    </header>







    <div class="container">
        <div class="row">


            <div class="row">
                <div class="col-md-6" style="">


                    <a href="{{path('store_show',{'slug':store.getSlug()})}}">  
                        <img id="store_profile_image" class="img-responsive store_logo"  src="{{asset(store.getProfileImageWebPath()  )  }}"/>
                    </a>
                        {%if is_admin%}      
                    <a id="sa_edit_profile_image" style="display:none;background:white;padding:4px;box-shadow: 0px 0px 1px black;position:absolute;bottom:3px;left:12px;z-index: 333333" href="">change image</a>
                     {% endif %}
                    <div id="store_header_cont">    
                        <h1 id="store_name_h1" ><a  style="color: #777777" href="{{path('store_show',{'slug':store.getSlug()})}}">{{store.getStoreName()}}</a></h1>   
                        <h6  id="store_slogan_h6"  >{{store.getShortDescription()}}</h6>   


                    </div>

                </div>
                <div class="col-md-6">

                    <ul class="pull-right">
                        <li> Email: {{store.getEmail()}} </li>
                        <li> Phone: {{store.getPhone()}} </li>
                        <li>

       {%if store.getFacebookPage() != "" %}<a href="{{store.getFacebookPage()}}"><i class="icon-facebook"></i></a>{% endif %}
       {%if store.getTwitter() != "" %}<a href="{{store.getTwitter()}}"><i class="icon-twitter"></i></a>{% endif %}
       {%if store.getGooglePlus() != "" %}<a href="{{store.getGooglePlus()}}"><i class="icon-google-plus-sign"></i></a>{% endif %}
       {%if store.getWebAddress() != "" %}<a href="{{store.getWebAddress()}}"><i class="icon-globe"></i></a>{% endif %}


                        </li>
                    </ul>




                </div>     </div>  
            <div class="store_cover_div"><img class="img-responsive coverphoto" style="" src="{{asset(store.getcoverphotoWebPath() )  }}"/>
            </div>


            <br/>
            <div class="row">        

                <div class="col-md-3">
         {%if is_admin%} 
                    <ul class="list-group">
                        <li class="list-group-item active">Store Administration </li>
                        <li class="list-group-item">   <a style="margin-bottom:4px;" class=" " href="{{path('storeadmin_page_new',{'store_id':store.getId()})}}"><i class="fa fa-plus"></i>new page</a></li>   
                        <li class="list-group-item">   <a style="margin-bottom:4px;" class=" " href="{{path('storeproductcategory_new',{'store_id':store.getId()})}}"><i class="fa fa-plus"></i>new category</a></li>
                        <li class="list-group-item">   <a style="margin-bottom:4px;" class=" " href="{{path('storeadmin_product_new',{'store_id':store.getId()})}}"><i class="fa fa-plus"></i>new product</a></li>
                        <li class="list-group-item">   <a style="margin-bottom:4px;" class=" " href="{{path('store_admin_edit',{'id':store.id, 'store_id':store.getId()})}}"><i class="fa fa-plus"></i>edit store info</a></li>
                    </ul>  
{% endif%}


                    <ul class="list-group">
                        <li class="list-group-item active"> Categories {%if is_admin%} <a style="margin-bottom:4px;" class="pull-right badge " href="{{path('storeproductcategory',{'store_id':store.getId()})}}"><i class="fa fa-plus"></i>add new</a>  {% endif%}</li>
    {% for spc in store.getEnabledStoreProductCategories()%}


                        <li class="list-group-item">            <a href="{{path('storeproductcategory_show',{'slug':spc.getSlug(),'store_id':store.id})}}">{{spc.getName()}}</a>    </li>

        {%endfor%}
                    </ul>


                    <ul class="list-group">
                        <li class="list-group-item active"> Pages  {%if is_admin%} <a style="margin-bottom:4px;" class="pull-right badge " href="{{path('storeadmin_page_new',{'store_id':store.getId()})}}"><i class="fa fa-plus"></i>add new</a>  {% endif%} </li>
    {% for page in store.getEnabledPages()%}


                        <li class="list-group-item">            <a href="{{path('page_show',{'slug':page.getSlug(),'store_slug':store.slug})}}">{{page.getName()}}</a>    </li>

        {%endfor%}
                    </ul>

                    <div class="well well-cstm">
             {%if is_admin%} <a style="margin-bottom:4px;" class="pull-right badge " href="{{path('store_admin_edit',{'id':store.getId()})}}"><i class="fa fa-plus"></i>update info</a> <br clear="all"/> {% endif%} 
                        <h3>{{store.getStoreName()}}</h3>
                        <div>{% if store.getAddress() != ""%}{{store.getAddress}}{% endif %}</div>

                        <h4 style="font-size: 16px;"> email: {{store.getEmail()}} </h4>
                        <h4 style="font-size: 16px;"> phone: {{store.getPhone()}} </h4>


       {%if store.getFacebookPage() != "" %}<a href="{{store.getFacebookPage()}}"><i class="icon-facebook"></i></a>{% endif %}
       {%if store.getTwitter() != "" %}<a href="{{store.getTwitter()}}"><i class="icon-twitter"></i></a>{% endif %}
       {%if store.getGooglePlus() != "" %}<a href="{{store.getGooglePlus()}}"><i class="icon-google-plus-sign"></i></a>{% endif %}
       {%if store.getWebAddress() != "" %}<a href="{{store.getWebAddress()}}"><i class="icon-globe"></i></a>{% endif %}


                        </li>
                        </ul>
                    </div>

                </div>            




                <div class="col-md-9"> {% block content %}{% endblock %} </div>
            </div>

        </div>
        <div style="margin-top:50px;min-height:200px;" class="footer">

        </div>
    </div>



{% endblock %}









    <script type="text/javascript" async src="//assets.pinterest.com/js/pinit.js"></script>
</body>
</html>


