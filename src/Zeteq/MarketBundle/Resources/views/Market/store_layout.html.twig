<!DOCTYPE HTML>
<head>
    <link rel="shortcut icon" href="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">





    <title>{% block title %} {{store.getStoreName()}} -- HalalNeeds.com {% endblock %}</title>

    <!-- for Google -->
    <meta name="description" content="{% block meta_description %} {{store.getShortDescription()}}ред {% endblock %}" />     
    <meta name="keywords" content=" {% block meta_keywords %}{{store.getMetaKeyWords()}}{% endblock %}" />


    <meta name="copyright" content="halalneeds.com" />
    <meta name="application-name" content="halalaneeds.com" />



    <!-- for Facebook -->          
    <meta property="og:title" content="{% block fb_og_title %} {{store.getStoreName()}} -- {{web}}  {% endblock %}" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="{% block og_image %}http://{{web}}{{asset(store.getProfileImageWebPath()  )  }} {% endblock %}" />
    <meta property="og:url" content="{% block og_url %} http://{{web}}/store/{{store.getSlug()}} {% endblock %}" />
    <meta property="og:description" content="{% block og_description %}{{store.getShortdescription()}}{% endblock %}" />
{% if fb_app_id != "" %}<meta property="fb:app_id" content="{{fb_app_id}}" />{% endif %}

    <!-- for Twitter -->          
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="{% block twitter_title %}  {{store.getStoreName()}} -- {{web}}   {% endblock %}" />
    <meta name="twitter:description" content="{% block twitter_description %}{{store.getShortdescription()}}ред {% endblock %}" />
    <meta name="twitter:image" content="{% block twitter_image %}http://{{web}}{{asset(store.getProfileImageWebPath()  )  }}  {% endblock %}" />














        {% block javascripts %}
    <script src="{{ asset('js/jquery-1.9.1.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bootstrap-3.0.0/dist/js/bootstrap.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/jquery.form.js') }}"  type="text/javascript"></script>








        {% endblock %}

        {% block stylesheets %}

    <link href="{{ asset('bootstrap-3.0.0/dist/css/bootstrap.css') }}" type="text/css" rel="stylesheet" />
    <!--[if lt IE 9]>

<script src="{{ asset('bootstrap-3.0.0/assets/js/respond.min.js') }}"></script>
<![endif]-->

    <link href="{{ asset('css/main.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('/css/font-awesome.min.css') }}" type="text/css" rel="stylesheet" />   
    <link rel="stylesheet" type="text/css" href="styles/styles.css">
        {% endblock %}



    <script type="text/javascript">
        $(function() {
            $("[rel='tooltip']").tooltip();
        });
    </script>

    <script type="text/javascript">
        $(document).ready(function() {
            $("#store_profile_image").hover(
                    function() {

                        $("#sa_edit_profile_image").show();
                    }, function() {

                $("#sa_edit_profile_image").hide();
            }

            );

        });
    </script>
</head>



<body id="store_layout_body">
    <div id="fb-root"></div>

    <script>
        (function(i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r;
            i[r] = i[r] || function() {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date();
