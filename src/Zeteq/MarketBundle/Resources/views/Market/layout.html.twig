  {% block body %}

    <header id="top_nav" role="banner" class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button data-target=".bs-navbar-collapse" data-toggle="collapse" type="button" class="navbar-toggle">
<i class="fa fa-circle-o" style="color: #DF2B2B"></i>
                </button>


                <a class="navbar-link" id="logo" href="{{path('home')}}"> <span class="glyphicon glyphicon-tree-deciduous"></span> Marketplace</a>

            </div>



            <nav role="navigation" class="collapse navbar-collapse bs-navbar-collapse">


                <ul id="tn_right_menu" class="nav navbar-nav pull-right" style=" margin-top: 5px;">

                    <li><a href="{{path('cart_index')}}"><span class="glyphicon glyphicon-shopping-cart"></span>Cart({{service.getCart().getCount()}})</a></li>

    {% if is_granted('ROLE_CUSTOMER') %}    <li><a href="{{path('myaccount')}}"><i class="fa fa-dashboard"></i> My Account</a></li>{% endif %}
      {% if is_granted('ROLE_STORE') %}    <li><a href="{{path('store_admin')}}"><i class="fa fa-gear"></i> Store Admin</a></li>{% endif %}
        {% if is_granted('ROLE_ADMIN') %}   <li><a href="{{path('admin')}}"><i class="fa fa-gears"></i> Main Admin</a></li>{% endif %}


           {% if app.user %}
                    <li><a href="{{path('logout')}}"><i class="fa fa-sign-out"></i> logout</a></li>
 {% else %}
                    <li><a href="{{path('myaccount_register')}}"><i class="fa fa-user"></i> Customer Registration</a></li>
                    <li><a href="{{path('register')}}"><i class="fa fa-users"></i> Sellers Register</a></li>
                    <li><a href="{{path('login')}}"><i class="fa fa-sign-in"></i> Login</a></li>
 {% endif %}

                </ul>


            </nav>
        </div>




    </header>


         {% block mainmenu %}
            {% block navbar %}
    <div id="navbar_container" class="">

        <nav role="navigation" class="navbar navbar-inverse" id="cat_nav">
            <div class="container"><div class="row">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button data-target="#bs-example-navbar-collapse-1" data-toggle="collapse" class="navbar-toggle" type="button">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div id="bs-example-navbar-collapse-1" class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
          {% for section in service.getEnabledProductSections() %}
                            <li class="dropdown">
                                <a data-toggle="dropdown" class="dropdown-toggle" href="#">{{section.getName()}} <b class="caret"></b></a>
                                <ul role="menu" class="dropdown-menu">
{% for pcat in section.getProductCategories() %}
                                    <li><a href="{{path('productcategory_show',{'slug':pcat.getSlug()})}}">{{ pcat.getName() }}</a></li>
{% endfor %}
                                </ul>
                            </li>
               {% endfor %}
                        </ul>


                    </div><!-- /.navbar-collapse -->
                </div>
            </div> 

        </nav>

    </div> <!-- end of navbar_container -->
            {% endblock navbar %}

    {% endblock mainmenu %}




    <div id="main_container" class="container" style="" >

        <div id="middle_container" style="min-height: 600px; ">
                       {% block middle_container %}

            <div class="row">
                <div class="col-md-3">

                    <div class="srch">

                        <div class="input-group">
                            <input type="text" class="form-control"  placeholder="search market">
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-default btn-srch">Go!</button>
                            </span>
                        </div><!-- /input-group -->

                    </div>

                    <br>
                    
                    {#*****************BROWSE STORES*******************#}
                    <div class="visible-lg"> 
                        <ul class="list-group">
                            <li class="list-group-item active">Browse Stores </li>
                        {% for section in service.getEnabledStoreSections() %}
                            <li class="list-group-item"><i class="fa fa-chevron-right" style="font-size: 10px;padding-right: 5px;color: #C3C3C3;"></i> <a href="{{path('storesection_show',{'slug':section.getSlug()})}}">{{section.getName()}}</a></li>        
                        {% endfor %}
                        </ul>
                    </div>

                    <div class="visible-lg">
                    <h5 class="section_header"><i class="fa fa-thumbs-up"> </i> Featured Stores</h5>
                    <div class="row">

                            {% for store in service.getFeaturedStores()%}
                        <div class="col-md-6">                       
                            <div class="feat_store_div" style="">
                                <a href="{{path('store_show',{'slug':store.slug})}}">
                                    <img style="height:100px;width:100px" class="img-responsive "  src="{{asset(store.getProfileImageWebPath()  )  }}"/>
                                </a>  <br/> 

                                <a class="feat_store_div_a" href="{{path('store_show',{'slug':store.slug})}}">  {{store.getStoreName()}}</a>  
                            </div>          

                        </div>               
{% endfor %}
                    </div>
                </div>

                </div>

                <div class="col-md-9"> 




{% block content %}

{% endblock %}

                </div>


            </div>
                        {% endblock %}
        </div>

{% endblock %}











    </div>







    <div style="border-top:solid 2px #ccc;padding-top:20px">
        <div class="container">



        </div>
    </div>


</body>
</html>


