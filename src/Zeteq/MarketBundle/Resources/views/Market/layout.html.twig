<!DOCTYPE HTML>
<head>
    <link rel="shortcut icon" href="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">





    <title>{% block title %} {{title}} {% endblock %}</title>



    <!-- for Google -->
    <meta name="description" content="{% block meta_description %} {{meta_description}}ред {% endblock %}" />     
    <meta name="keywords" content=" {% block meta_keywords %}{{meta_keywords}}{% endblock %}" />


    <meta name="copyright" content="{{meta_copyright}}" />
    <meta name="application-name" content="{{meta_applicationname}}" />



    <!-- for Facebook -->          
    <meta property="og:title" content="{% block fb_og_title %}  {{fb_og_title}}  {% endblock %}" />
    <meta property="og:type" content="{{fb_og_type}}" />
    <meta property="og:image" content="{% block og_image %}http://{{web}}{{fb_og_image}}{% endblock %}" />
    <meta property="og:url" content="{% block og_url %} {{fb_og_url}} {% endblock %}" />
    <meta property="og:description" content="{% block og_description %}{{fb_og_description}}{% endblock %}" />
{% if fb_app_id != "" %}<meta property="fb:app_id" content="{{fb_app_id}}" />{% endif %}

    <!-- for Twitter -->          
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content="{% block twitter_title %}{{twitter_title}}{% endblock %}" />
    <meta name="twitter:description" content="{% block twitter_description %}{{twitter_description}}ред{% endblock %}" />
    <meta name="twitter:image" content="{% block twitter_image %}http://{{web}}{{twitter_image}}{% endblock %}" />





        {% block javascripts %}
    <script src="{{ asset('js/jquery-1.9.1.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bootstrap-3.0.0/dist/js/bootstrap.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/jquery.form.js') }}"  type="text/javascript"></script>
    <script src="{{ asset('bootstrap-3.0.0/js/tooltip.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/select2-3.4.5/select2.min.js') }}"></script>
    <link href="{{ asset('js/select2-3.4.5/select2.css') }}" type="text/css" rel="stylesheet" /> 






        {% endblock %}

        {% block stylesheets %}

    <link href="{{ asset('bootstrap-3.0.0/dist/css/bootstrap.css') }}" type="text/css" rel="stylesheet" />
    <!--[if lt IE 9]>

<script src="{{ asset('bootstrap-3.0.0/assets/js/respond.min.js') }}"></script>
<![endif]-->

    <link href="{{ asset('css/main.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('css/font-awesome/css/font-awesome.min.css') }}" type="text/css" rel="stylesheet" /> 
    <link rel="stylesheet" type="text/css" href="{{ asset('css/styles.css') }}">
        {% endblock %}



    <script type="text/javascript">
        $(function() {
            $("[rel='tooltip']").tooltip();
        });
    </script>
</head>



